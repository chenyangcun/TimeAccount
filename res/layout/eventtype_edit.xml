<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@color/background"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content" android:textSize="20dp"
			android:layout_height="wrap_content" android:text="@string/eventtype_title" />
		<EditText android:id="@+id/name" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:scrollbars="vertical" />
	</LinearLayout>

	<Button android:id="@+id/confirm" android:text="@string/confirm" android:width="100dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>